
---
// src/layouts/BlogLayout.astro
import CopyButton from '../components/CopyButton.astro';


const { frontmatter } = Astro.props;

---

<html>
<head>
  <title>{frontmatter.title}</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body>
  <div class="win98-container">
    <div class="win98-window">
      <div class="title-bar">
        <div class="title-bar-text">{frontmatter.title}</div>
        <div class="title-bar-controls">
          <button aria-label="Minimize"></button>
          <button aria-label="Maximize"></button>
          <button aria-label="Close"></button>
        </div>
      </div>
      <div class="window-content">
        <slot />
      </div>
    </div>
  </div>
</body>
</html>

<style>
  /* Main container */
  .win98-container {
    background: #3a6ea5;
    min-height: 100vh;
    padding: 2rem;
  }

  /* Window styling */
  .win98-window {
    max-width: 800px;
    margin: 0 auto;
    background: #d4d0c8;
    border: 2px solid #808080;
    border-right-color: #fff;
    border-bottom-color: #fff;
    box-shadow: inset 1px 1px #dfdfdf, 
                inset -1px -1px #0a0a0a,
                0.5px 0.5px 0 0.5px #ffffff,
                -1px -1px 0 1px #0a0a0a;
  }

  /* Title bar */
  .title-bar {
    background: linear-gradient(90deg, #000080, #1084d0);
    padding: 3px;
    color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .title-bar-text {
    font-family: "Microsoft Sans Serif", sans-serif;
    font-size: 11px;
    font-weight: bold;
    margin-left: 3px;
  }

  .title-bar-controls {
    display: flex;
    gap: 2px;
  }

  .title-bar-controls button {
    width: 16px;
    height: 14px;
    border: 1px solid #808080;
    border-right-color: #fff;
    border-bottom-color: #fff;
    background: #d4d0c8;
    position: relative;
    cursor: default;
  }

  /* Window content */
  .window-content {
    padding: 2rem;
  }

  /* General markdown content styling */
  :global(h1, h2, h3, h4, h5, h6) {
    font-family: "Microsoft Sans Serif", sans-serif;
    color: #222;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  :global(p) {
    font-family: "Microsoft Sans Serif", sans-serif;
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 1.2rem;
    color: #222;
  }

  /* Code block styling - now as an inset panel */
  :global(pre) {
    background: #ffffff;
    padding: 1rem;
    margin: 2rem 0;
    border: 2px solid;
    border-color: #808080 #fff #fff #808080;
    box-shadow: inset 1px 1px #0a0a0a,
                inset -1px -1px #dfdfdf;
    position: relative;
  }

  /* Code content area */
  :global(pre code) {
    display: block;
    color: #222;
    font-family: "Consolas", "Courier New", monospace;
    font-size: 14px;
    line-height: 1.5;
    overflow-x: auto;
  }

  /* Scrollbar styling */
  :global(pre code::-webkit-scrollbar) {
    width: 16px;
    height: 16px;
    background: #d4d0c8;
  }

  :global(pre code::-webkit-scrollbar-track) {
    background: #d4d0c8;
    border: 1px solid;
    border-color: #808080 #fff #fff #808080;
  }

  :global(pre code::-webkit-scrollbar-thumb) {
    background-color: #d4d0c8;
    border: 1px solid #808080;
    box-shadow: inset 1px 1px #fff,
                inset -1px -1px #0a0a0a;
  }

  /* Links */
  :global(a) {
    color: #000080;
    text-decoration: underline;
  }

  :global(a:hover) {
    color: #0000ff;
  }

  /* Lists */
  :global(ul, ol) {
    margin-bottom: 1.2rem;
    padding-left: 2rem;
  }

  :global(li) {
    margin-bottom: 0.5rem;
    font-family: "Microsoft Sans Serif", sans-serif;
    font-size: 16px;
    line-height: 1.6;
    color: #222;
  }

  /* Blockquotes */
  :global(blockquote) {
    margin: 1.5rem 0;
    padding: 1rem;
    background: #ffffff;
    border: 2px solid;
    border-color: #808080 #fff #fff #808080;
    box-shadow: inset 1px 1px #0a0a0a,
                inset -1px -1px #dfdfdf;
  }

  :global(blockquote p) {
    margin-bottom: 0;
  }

  /* Inline code */
  :global(:not(pre) > code) {
    background: #ffffff;
    padding: 0.2em 0.4em;
    border: 1px solid #808080;
    border-right-color: #fff;
    border-bottom-color: #fff;
    font-family: "Consolas", "Courier New", monospace;
    font-size: 0.9em;
    color: #222;
  }
</style>
